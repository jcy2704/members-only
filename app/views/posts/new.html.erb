
<%= form_for @post do |f| %>
  <% @post.errors.full_messages.each do |error| %>
    <li><%= error %></li>
  <% end %>
  <br />
  <%= f.label :title%><br />
  <%= f.text_field :title %><br/>
  <%= f.label :body%><br />
  <%= f.text_area :body, size: "60x12" %><br/>
  <%= f.submit "Create" %>
<% end %>

<%= link_to  'Back to Posts', posts_path %>