<% if user_signed_in? %>
  <%= link_to  "< Back to Posts", posts_path, class: "back-to" %>
<%end%>

<h1 class="create-title">Create an Post</h1>

<%= form_for @post, html: { class: "event-form" } do |f| %>
  <%= f.label :title, class: "name-label" %>
  <%= f.text_field :title, class: "name"%>
  <%= f.label :body, class: "body-label" %>
  <%= f.text_area :body, size: "60x12", class: "body" %>
  <%= f.submit "Create", class: "create-btn" %>

  <% @post.errors.full_messages.each do |error| %>
    <li><%= error %></li>
  <% end %>
<% end %>
