<br/>
<h2 class="sign-up-title">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= f.label :email, class: 'email-label' %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'email' %>

    <%= f.label :password, class: 'password-label' %>
    <%= f.password_field :password, autocomplete: "current-password", class: 'password-login' %>


  <% if devise_mapping.rememberable? %>
  <div class="remember-me">
    <%= f.label :remember_me %>
    <%= f.check_box :remember_me %>
  </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class:'sign-in-btn' %>
  </div>
  <%= render "devise/shared/links" %>
<% end %>


