<%= link_to "< Back", :back, class: 'back-to' %>
<h2 class="edit-title">Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'edit-form', method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.label :name, class: 'name-label' %>
    <%= f.text_field :name, class: 'name' %>


    <%= f.label :email, class: 'email-label' %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'email' %>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

    <%= f.label :password %> <i class='password-label'>(leave blank if you don't want to change it)</i>
    <%= f.password_field :password, autocomplete: "new-password", class: 'password' %>


    <%= f.label :password_confirmation %>
    <% if @minimum_password_length %>
      <br />
      <em class="minimum"><%= @minimum_password_length %> characters minimum</em>
    <% end %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'password'%>

    <%= f.label :current_password %> <i class='password-label'>(we need your current password to confirm your changes)</i>
    <%= f.password_field :current_password, autocomplete: "current-password", class: 'password' %>


  <div class="actions">
    <%= f.submit "Update", class: 'update-btn' %>
  </div>
<% end %>

